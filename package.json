{
  "name": "vue-phone-input-kz",
  "version": "1.0.5",
  "description": "A Phone Input Component for Kazakhstan",
  "keywords": ["phone input", "input component", "kazakhstan"],
  "type": "module",
  "main": "dist/index.es.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    },
    "./index.css": "./dist/vue-phone-input-kz.css"
  },
  "scripts": {
    "lint": "eslint",
    "shadcn": "bin/shadcn",
    "start:test-app": "cd test/app && npm run test-app",
    "build:types": "vue-tsc --noEmit false",
    "build": "vite build && npm run build:types",
    "test:app": "npm run build && cd test/app && npm i && npm run test-app",
    "prepublish": "npm run build"
  },
  "files": [
    "dist/"
  ],
  "author": "Kenny Romanov",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@vitejs/plugin-vue": "^6.0.4",
    "eslint-plugin-vue": "^10.7.0",
    "globals": "^17.3.0",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-plugin-eslint": "^1.8.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.4"
  },
  "dependencies": {
    "@vueuse/core": "^14.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.563.0",
    "reka-ui": "^2.8.0",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
