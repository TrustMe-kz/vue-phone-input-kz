{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@phone-input-kz/index.ts": [ "../../dist/index.es" ],
      "@phone-input-kz/*": [ "../../dist/*" ]
    },
    "target": "ES2020",
    "module": "ESNext",
    "lib": [ "ES2020", "DOM" ],
    "types": [ "node" ],
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "vite.config.ts",
  ]
}
