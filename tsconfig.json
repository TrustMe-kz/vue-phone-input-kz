{
  "exclude": [ "dist/**", "test/**" ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ],
      "@phone-input-kz/*": [ "dist/*" ],
      "@phone-input-kz": [ "dist/index.js" ],
      "@test-lib": [ "test-lib.ts" ],
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [ "ES2020", "DOM" ],
    "types": [ "node" ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,

    /* Bundler mode */
    "outDir": "dist",
    "moduleResolution": "node",
    "isolatedModules": false,
    "moduleDetection": "force",
    "declaration": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,

    /* Linting */
    "strict": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ]
}